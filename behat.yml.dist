default:
  suites:
    maths:
      paths:
        - '%paths.base%/features/maths'
      contexts: [ MathsContext ]

  extensions:
    DVDoug\Behat\CodeCoverage\Extension:
      filter:
        whitelist:
          include:
            directories:
              'src': ~
      report:
        format: html
        options:
          target: build/coverage-behat
